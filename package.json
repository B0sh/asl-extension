{
    "name": "asl-language",
    "displayName": "Auto Splitting Language",
    "description": "Syntax highlighting for Auto Splitting Language",
    "version": "1.0.0",
    "icon": "images/icon.png",
    "publisher": "B0sh",
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "license": "MIT",
    "bugs": {
		"url": "https://github.com/B0sh/asl-lang/issues"
	},
	"homepage": "https://github.com/B0sh/asl-lang/",
	"repository": {
		"type": "git",
		"url": "https://github.com/B0sh/asl-lang/blob/master/README.md"
	},
    "contributes": {
        "languages": [{
            "id": "asl",
            "aliases": [
                "Auto Splitting Language", 
                "asl"
            ],
            "extensions": [
                ".asl"
            ],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [
            {
                "language": "asl",
                "scopeName": "source.asl",
                "path": "./syntaxes/asl.tmLanguage.json"
            },
            {
                "scopeName": "source.csharp.asl",
                "path": "./syntaxes/csharp.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "asl",
                "path": "./snippets/asl.json"
            }
        ]
    }
}