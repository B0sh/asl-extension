{
	"full script for mono.v2 32-bit": {
		"prefix": ["mono2x86", "mono_v2_32bit"],
		"description": "Creates a full ASL script for use with Unity games on mono-2.0.",
		"body": [
			"state(\"${1:game}\") {}",
			"",
			"startup",
			"{",
			"\tvars.Log = (Action<object>)((output) => print(\"[${1} ASL] \" + output));",
			"}",
			"",
			"init",
			"{",
			"\tvars.IsCompleted = false;",
			"\tvars.CancelSource = new CancellationTokenSource();",
			"\tSystem.Threading.Tasks.Task.Run((Action)(async () =>",
			"\t{",
			"\t\t// await System.Threading.Tasks.Task.Delay(1000);",
			"\t\tvars.CancelSource.Token;",
			"",
			"\t\t$0",
			"",
			"\t\tvars.IsCompleted = true;",
			"\t}), vars.CancelSource.Token);",
			"}",
			"",
			"update",
			"{",
			"\tif (!vars.IsCompleted) return false;",
			"}",
			"",
			"exit",
			"{",
			"\tvars.CancelSource.Cancel();",
			"}",
			"",
			"shutdown",
			"{",
			"\tvars.CancelSource.Cancel();",
			"}"
		]
	}
}